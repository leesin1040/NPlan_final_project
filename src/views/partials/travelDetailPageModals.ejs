      <div class="addScheduleModal-placeInfo">
        <div class="addScheduleModal-selectOption">
          <form action="#">
            <label for="areaCode">지역: </label>
            <select name="지역" id="areaCode">
              <option value="1">서울</option>
              <option value="2">인천</option>
              <option value="3">대전</option>

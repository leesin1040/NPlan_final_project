<!-- schedule 추가 모달 -->
<section id="addScheduleModal" class="modal">
  <div class="modal-content addScheduleModalContent">
    <header class="addScheduleModal-header">
      <h1 id="tavelTitle"><%= oneTravel.title %></h1>
      <h2 id="dayTitle">n일차</h2>
      <p onclick="closeModalPage()">X</p>
    </header>
    <div class="addScheduleModal-container">
